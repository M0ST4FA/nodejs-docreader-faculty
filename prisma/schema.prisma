generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  User
  Editor
}

model Faculty {
  id   Int    @id @default(autoincrement())
  name String
  city String

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  users  User[]
  admins FacultyAdmin[]
  years  StudyingYear[]

  @@map("faculties")
}

model FacultyAdmin {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  facultyId Int

  faculty Faculty @relation(fields: [facultyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("facultyAdmins")
}

model User {
  id                Int                    @id @default(autoincrement())
  name              String
  email             String                 @unique
  password          String
  status            Boolean                @default(false)
  role              UserRole               @default(User)
  facultyId         Int
  yearId            Int                    @default(1)
  faculty           Faculty                @relation(fields: [facultyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  year              StudyingYear           @relation(fields: [yearId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  verificationCodes UserVerificationCode[]

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("users")
}

model UserVerificationCode {
  id     Int    @id @default(autoincrement())
  userId Int
  code   String
  plain  String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp()
  expiresIn DateTime @default(now()) @db.Timestamp()

  @@map("user_verification_codes")
}

model StudyingYear {
  id        Int      @id @default(autoincrement())
  title     String
  facultyId Int
  faculty   Faculty  @relation(fields: [facultyId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()
  modules   Module[]
  users     User[]

  @@map("studying_years")
}

model Module {
  id     Int    @id @default(autoincrement())
  yearId Int
  name   String
  icon   String

  year     StudyingYear    @relation(fields: [yearId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  subjects ModuleSubject[]

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("modules")
}

model ModuleSubject {
  id       Int    @id @default(autoincrement())
  moduleId Int
  name     String
  icon     String

  module         Module                 @relation(fields: [moduleId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  lectures       SubjectLecture[]
  practical      SubjectPractical[]
  finalRevisions SubjectFinalRevision[]

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("module_subjects")
}

model DataCategory {
  id   Int    @id @default(autoincrement())
  name String
  icon String

  subjectLectures       SubjectLecture[]
  subjectPractical      SubjectPractical[]
  subjectFinalRevisions SubjectFinalRevision[]

  @@map("data_categories")
}

model SubjectLecture {
  id         Int @id @default(autoincrement())
  subjectId  Int
  categoryId Int

  title       String
  description String
  url         String

  subject  ModuleSubject @relation(fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  category DataCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("subject_lectures")
}

model SubjectFinalRevision {
  id         Int @id @default(autoincrement())
  subjectId  Int
  categoryId Int

  title       String
  description String
  url         String

  subject  ModuleSubject @relation(fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  category DataCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("subject_final_rev")
}

model SubjectPractical {
  id         Int @id @default(autoincrement())
  subjectId  Int
  categoryId Int

  title       String
  description String
  url         String

  subject  ModuleSubject @relation(fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  category DataCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp()

  @@map("subject_practical")
}
